<script>
  $(".img").click(function(){
    $(".img").removeClass("on");
    $(this).addClass("on");
    $(".showdiv02 img").attr("src",$(this).find("img").attr("src"));
    $(".showdiv02").attr("href",$(this).find("img").attr("src"));
  });
  function cartadd(product_id ,minimum){
    $.ajax({
      type: 'POST',
      url: '/index.php?route=checkout/cart/add',
      data: {'product_id':product_id,"minimum":minimum},
      dataType: 'json',
      success: function(res){
        alert(res.success);
        console.log(res);
      },
    });
  }
</script>

