
<div class="t">产品列表</div>
<div class="titlediv">
  <div class="titlelist">产品</div>
  <div class="titlelist">价格</div>
  <div class="titlelist">数量</div>
  <div class="titlelist">总额</div>
</div>
<div class="prodiv">
  {% for product in products %}
  <div class="prodivlist">
    <div class="prodivlist_l"><div class="img"><img src="{{ product.image }}" /></div><p>{{ product.name }}</p></div>
    <div class="prodivlist_l">{{ product.price }}</div>
    <div class="prodivlist_l">{{ product.quantity }}</div>
    <div class="prodivlist_l">{{ product.total }}</div>
  </div>
  {% endfor %}
</div>
<div class="typediv">
  <p>配送方式：</p>
  <div class="typelist on"><img src="public/images/icon01.png" /><span>快递物流</span></div>
  <div class="typelist"><img src="public/images/icon02.png" /><span>金库存储</span></div>
  <div class="typelist"><img src="public/images/icon03.png" /><span>自行提取</span></div>
</div>
<div class="submitdiv">
  {% for total in totals %}
    {{ total.title }}:<span>{{ total.text }}</span>
  {% endfor %}
  <a class="submit"   onclick="confromorder()" >提 交</a>
</div>


