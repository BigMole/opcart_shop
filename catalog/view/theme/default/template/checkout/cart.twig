{{ header }}


<div class="cartdiv">
  <div class="cartdivt">你的购物车</div>
  <div class="cartlist01">
    <div class="cartlist01_01">产品</div>
    <div class="cartlist01_02">单价</div>
    <div class="cartlist01_03">数量</div>
    <div class="cartlist01_04">小计</div>
  </div>

  {% for product in products %}
  <div class="cartlist02">
      <div class="cartlist01_01">
        {% if product.thumb %}
        <img src="{{ product.thumb }}" />
        {% endif %}
          <div class="text">
            <div class="t"><span>商品名称：</span> {{ product.name }} </div>
            <a href="" class="b">移除</a>
          </div>
      </div>
      <div class="cartlist01_02">{{ product.price }}</div>
      <div class="cartlist01_03">
        <a href="javascript:;"><img src="public/images/0512/reduce.jpg" /></a>
        <input class="num" type="text" value="1" />
        <a href="javascript:;"><img src="public/images/0512/add.jpg" /></a>
      </div>
      <div class="cartlist01_04">{{ product.total }}</div>
  </div>
  {% endfor %}


  <div class="cartlist03">物流费用 <span>（物流费用需在下单后，去会员中心进行支付）</span><div class="rprice">$0.00</div></div>
  {% for total in totals %}
  <div class="cartlist03">{{ total.title }}<div class="rprice">{{ total.text }}</div></div>
  {% endfor %}
  <div class="cartlist03">配送方式<div class="rtext">物流配送</div></div>
  <div class="cartlist03">仓储情况<div class="rtext">剩余89KG</div></div>
  <div class="cartlist04">在订单中添加注释<textarea></textarea></div>
  <div class="cartlist05">
    <a href="" class="">继续购物</a>
    <a href="index.php?route=checkout/checkout" class="">进行结算</a>
  </div>
</div>



