        </div>
      </div>
      <script>
        $('#owl-demo03').owlCarousel({
          items: 1,
          pagination: true,
          rewindNav : true,
          autoPlay : 5000,
          stopOnHover:false,
          touchDrag:false,
          mouseDrag:false,
          navigation:false,
          navigationText : [" "," "],
        });
      </script>
      <div class="uc-box-reg">
          <ul class="register-tab">
            <span style="color: #f00;">{{ error_warning }}</span>
            <li class="have-account fr">已有账号！<a href="{{ helper.url.link('account/login') }}">登录</a></li>
          </ul>
        <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
          <input type="hidden" name="type" value="email" />
          <div class="form">
            <input type="hidden" name="register_type" value="email" />
            <div class="item">
              <input name="email" type="text" id="email" placeholder="email" onblur="checkEmail(this)" class="text email" />
              <i class="i-email"></i>
              <div> <span class="label" id="email_notice"></span> </div>
            </div>
            <div id="o-password">
              <div class="item">
                <input name="password" type="password" id="password" placeholder="密码" onblur="check_password(this.value);" onkeyup="checkIntensity(this.value)" class="text" />
                <i class="i-pass"></i>
                <div id="pwd_notice" style="display: none;"> <span class="label" id="password_notice"></span> </div>
                <div id="pwd_intensity">
                  <span class="label">
                          <table width="295" height="25px" border="0" cellspacing="0" cellpadding="0" style="padding: 0px 0px 10px;">
                              <tr align="center">
                                  <td width="33%" id="pwd_lower">弱</td>
                                  <td width="33%" id="pwd_middle">中</td>
                                  <td width="33%" id="pwd_high">强</td>
                              </tr>
                          </table>
                  </span>
                </div>
              </div>
              <div class="item">
                <input type="password" id="conform_password" name="confirm" class="text" placeholder="确认密码" onblur="check_conform_password(this.value);" autocomplete="off" />
                <i class="i-pass"></i>
                <div> <span class="label" id="conform_password_notice"></span> </div>
              </div>
            </div>

            <div class="item">
              <input name="firstname" id="extend_field5" type="text" class="text" placeholder="手机" />
              <i class="i-phone"></i>
              <div> <span class="label" id="extend_field5i"></span> </div>
            </div>

            <div class="item">
              <input name="wxname" id="extend_field8" type="text" class="text" placeholder="微信/Telegram" />
              <i class="i-phone"></i>
              <div> <span class="label" id="extend_field8i"></span> </div>
            </div>

            <div class="item" >
              <input id="email_code" class="text text-te fl" type="text" placeholder="邮箱验证码" name="email_code" maxlength="6">
              <i class="i-email"></i>
              <input id="zemail" class="zemail" type="button" value="获取邮箱验证码 ">
              <div style="clear:both"> <span id="extend_field5i" class="label"></span> </div>
            </div>

            <div class="safety">
              <input name="agree" type="checkbox" value="1" checked="checked" class="checkbox" />
              <label for="remember" class="mar-b">我已看过并接受《<a href="article.php?cat_id=-1" style="color:blue" target="_blank">用户协议</a>》</label>
            </div>
            <div class="item">
              <input name="act" type="hidden" value="register">
              <input type="hidden" name="back_act" value="user.php" />
              <input type="submit" id="btn_submit" name="Submit" class="btn-img btn-regist" value="立即注册" />
            </div>
          </div>
        </form>
