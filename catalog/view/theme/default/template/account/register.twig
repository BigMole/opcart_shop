  <div id="regist">
    <div class="register-con">
      <div class="box-pic-reg">
        <div id="owl-demo03" class="owl-carousel">
          <div class="item"><img src="public/images/zhuce.jpg" width="100%"></div>
          <div class="item"><img src="public/images/zhuce.jpg" width="100%"></div>
